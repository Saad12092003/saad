// print the number of prim
#include<stdio.h>
int main()
{
    int a,n,sum=0;
    printf("Enter the n=");
    scanf("%d",&n);
    for(a=1;a<=n/2;a++)
    {
        if(n%a==0)
        {
            sum+=a;
        }
    }
    if(sum==n)
    {
        printf("%d is perfect number",n);
    }
    else
    {
        printf("%d is not perfect number",n);

    }
    return 0;
}
